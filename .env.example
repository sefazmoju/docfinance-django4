# Variáveis de Ambiente para Produção

# Chave Secreta do Django (gerar uma nova para produção)
SECRET_KEY=sua_chave_secreta_aqui

# Configurações do Banco de Dados PostgreSQL
DB_NAME=seu_nome_do_banco
DB_USER=seu_usuario_do_banco
DB_PASSWORD=sua_senha_do_banco
DB_HOST=seu_host_do_banco
DB_PORT=5432

# Hosts Permitidos (domínio da sua aplicação na Vercel)
ALLOWED_HOSTS=seu_dominio.vercel.app,www.seu_dominio.com

# Configurações de E-mail (SMTP)
EMAIL_HOST=smtp.seuservidor.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=seu_email@dominio.com
EMAIL_HOST_PASSWORD=sua_senha_de_email
DEFAULT_FROM_EMAIL=seu_email@dominio.com

# Sentry DSN (opcional, para monitoramento de erros)
# SENTRY_DSN=https://examplepublickey@o0.ingest.sentry.io/0