{
    "version": 2,
    "builds": [{
        "src": "config/wsgi.py",
        "use": "@vercel/python",
        "config": { 
            "runtime": "python3.12",
            "maxLambdaSize": "15mb"
        }
    },
    {
        "src": "build_files.sh",
        "use": "@vercel/static-build",
        "config": {
            "distDir": "staticfiles"
        }
    }],
    "routes": [
        {
            "src": "^/static/(.*)$",
            "dest": "/static/$1"
        },
        {
            "src": "^/(.*)$",
            "dest": "config/wsgi.py"
        }
    ]
}